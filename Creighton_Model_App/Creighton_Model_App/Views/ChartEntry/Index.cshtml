@model IEnumerable<Creighton_Model_App.Models.ChartEntry>
@{ 
    ViewData["Title"] = "My Chart";
}
<h2 class="text-center">My Chart</h2>



<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sticker.StickerColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description.Observation)
            </th>
        </tr>
    </thead>
    @foreach (var enteries in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelEntries => enteries.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelEntries => enteries.sticker.StickerColor)
        </td>
        <td>
            @Html.DisplayFor(modelEntries => enteries.description.Observation)
        </td>
        <td>
            <a asp-action="Edit" asp-route-Id="@enteries.ChartEntryId">Edit</a>
        </td>
        <td>
            <a asp-action="Delete" asp-route-Id="@enteries.ChartEntryId">Delete</a>
        </td>
    </tr>
    }
</table>

